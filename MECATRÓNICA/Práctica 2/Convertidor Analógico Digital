int analogPin = A0;// potentiometer wiper (middle terminal) connected to analog pin 3
					// outside leads to ground and +5V
float val = 0;// variable to store the value read
float volt = 0;

int led=13;

void setup() {
  Serial.begin(9600);//  setup serial
  pinMode(led, OUTPUT);
}

void loop() {
  val = analogRead(analogPin);// read the input pin
  volt = val*5/1023;
  
  // 1) 
  //Serial.print ("Conversi贸n anal贸gico-digital: ");
  //Serial.println(val);// debug value
  
  Serial.print ("Valor voltaje: ");
  Serial.println(volt);
  
  /** //Esta parte del c贸digo permite que el LED encienda si y solo si el voltaje es mayor a 3V
  
  if (volt>3){
    digitalWrite(led, HIGH);
	}
  else {
    digitalWrite(led, LOW);
  }**/
  
  //Esta linea de c贸digo eprmite que el LED prenda de forma proporcional al voltaje recibido. 
  
  analogWrite(led,val/4);
}
